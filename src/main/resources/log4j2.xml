<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout>
                <MarkerPatternSelector defaultPattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %c{2} - %m%n">
                    <PatternMatch key="CELL" pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5p %m%n"/>
                </MarkerPatternSelector>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="cell" level="debug"/>
        <Logger name="in.xnnyygn.xraft2" level="debug"/>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>